{
    "manifest_version": 2,
    "name": "Editor++",
    "version": "0.1.0",

    "description": "Improved Editor for Bonk2.io. Currently includes a hex color picker.",

    "icons": {
        "16": "epp.svg",
        "32": "epp.svg",
        "48": "epp.svg",
        "96": "epp.svg",
        "128": "epp.svg"
    },

    "permissions": ["*://bonk2.io/beta/*", "webRequest", "webRequestBlocking"],

    "web_accessible_resources": [
      "content.bundle.js"
    ],

    "background": {
        "scripts": ["./background.bundle.js"]
    }
}
