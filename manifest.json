{
    "manifest_version": 2,
    "name": "Editor++",
    "version": "0.3.0",

    "description": "Improved Editor for Bonk2.io. Currently includes a hex color picker and increased map size options.",

    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "96": "icons/96.png",
        "128": "icons/128.png"
    },

    "permissions": ["*://bonk2.io/beta/*", "webRequest", "webRequestBlocking"],

    "web_accessible_resources": ["content.bundle.js"],

    "background": {
        "scripts": ["./background.bundle.js"]
    }
}
