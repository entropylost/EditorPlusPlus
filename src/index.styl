#container

    background-color: #212121
    color: #FFF
    border: 1px solid #FFF
    clip-path: polygon(0% 0%, calc(100% - 0.2em) 0%, 100% 5px, 100% calc(100% - 0.2em), calc(100% - 0.2em) 100%, 0% 100%)
    transition: color 0.1s, background-color 0.1s, width 0.1s

    white-space: nowrap
    overflow: hidden

    width: 1.5em
    height: 1.5em
    font-size: 2em
    box-sizing: border-box
    padding-left: 0.5em
    padding-right: 0.5em

    & > span
        width: 3em
        transition: width 0.1s
        display: inline-block

#container:hover
    width: 5em
    color: #212121
    background-color: #FFF
    & > span
        width: 0px
