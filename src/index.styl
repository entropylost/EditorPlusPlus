@import url('https://fonts.googleapis.com/css2?family=Fira+Code&display=swap')

buttonTime = 0.5s
primary = #FFF
secondary = #111

#container
    position: fixed
    left: 0em
    top: 20vh

    background: secondary
    color: primary

    clip-path: polygon(0% 0%, calc(100% - 0.4em) 0%, 100% 0.4em, 100% calc(100% - 0.4em), calc(100% - 0.4em) 100%, 0% 100%)
    transition: width buttonTime, height buttonTime

    white-space: nowrap
    overflow: hidden

    display: inline-block
    font-family: 'Source Sans Pro', Arial, sans-serif

#container-shadow
    filter: drop-shadow(3px 3px 2px #0004) drop-shadow(0px 0px 5px #0002)
    position: fixed
    left: 0em
    top: 0em
    width: 0em
    height: 0em
    display: inline-block

#title
    position: relative
    width: 1.5em
    height: 1.5em
    box-sizing: border-box
    padding-left: 0.5em
    padding-right: 0.5em
    font-size: 2rem

    transition: color buttonTime, background buttonTime, width buttonTime, height buttonTime

    user-select: none
    cursor: pointer

    &:hover, &.activated
        width: 7em
        color: secondary
        background: primary

        & span
            width: 0em
        & svg
            fill: secondary
        & > #icon
            left: -1.5em
    &:active
        filter: brightness(95%)

#title-interior
    position: absolute
    top: 50%
    transform: translateY(-50%)
    font-size: 1.5em

    & > span
        width: 3em
        transition: width buttonTime
        display: inline-block

#icon
    width: 1.5em
    height: 1.5em
    position: absolute
    transform: translateY(-50%)
    top: 50%
    left: -0.05em

    transition: left buttonTime

    & > svg
        transition: fill buttonTime
        fill: primary